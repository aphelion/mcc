= form_for job do |f|
  .form-group.row
    = f.label :name, class: 'col-sm-2 form-control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group.row
    = f.label :status, class: 'col-sm-2 form-control-label'
    .col-sm-10
      = f.select :status,
                 options_for_select(statuses.collect { |s| [s.humanize(capitalize: false), s] }, selected: job.status),
                 {},
                 {class: 'form-control c-select'}
  .form-group.row
    .col-sm-offset-2.col-sm-10
      = f.submit nil, {class: 'btn btn-primary'}
      = link_to 'Cancel', cancel_path, class: 'btn btn-secondary' if defined? cancel_path
      = link_to 'Delete', job, method: :delete, class: 'btn btn-danger' if job.persisted?
